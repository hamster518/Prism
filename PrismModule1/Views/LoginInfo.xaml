<UserControl x:Class="PrismModule1.Views.LoginInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                <Label Content="Username: "  FontSize="50"/>
                <TextBlock Text="{Binding Notification.UserName}" FontSize="50"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                <Label Content="Password: " FontSize="50" />
                <TextBlock Text="{Binding Notification.Password}" FontSize="50" />
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
